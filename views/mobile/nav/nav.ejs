<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/tailwindcss.css">

  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://kit.fontawesome.com/ca713a058f.js" crossorigin="anonymous"></script>

</head>

<nav class="shadow relative flex md:items-center justify-between ">
  <div class="p-10 fondo-black shadow relative z-30 flex-1">
    <div class="texto-white flex justify-between items-center ">
      <span class=" text-2xl cursor-pointer z-30">
        <i class="fa-solid fa-book-open"></i>
        Book Lovers
      </span>
      <span class="text-3xl cursor-pointer mx-2 z-30 md:hidden block">
        <i class="fa-solid fa-bars" onclick="Menu(this)"></i>
      </span>
    </div>
  </div>

  <ul class="texto-white z-20 md:flex md:items-center 
  md:relative absolute fondo-black w-full left-0 md:w-auto
  md:py-0 py-4 md:pl-0 pl-7 md:opacity-100 opacity-0 top-[-400px] 
  transition-all ease-in duration-500"> 
    <li class="mx-4 my-6 md:my-0">
      <a href="#" class="text-xl">Home</a>
    </li>
    <li class="mx-4 my-6 md:my-0">
      <a href="#" class="text-xl">Genres</a>
    </li>
    <li class="mx-4 my-6 md:my-0">
      <a href="#" class="text-xl">Forum</a>
    </li>
    <li class="mx-4 my-6 md:my-0">
      <a href="/about" class="text-xl">About</a>
    </li>
    <li class="inline-block mx-4 my-6 md:my-0">
      <%= session.username == "" ? "nadie" : session.username %>
      <a href="/login" class="text-xl">Sign in  /</a><a href="/login" class="text-xl">  Sign up</a>
    </li>
  </ul>

</nav>

<script>
  function Menu(e){
    let list = document.querySelector('ul');
    e.name === 'menu' ? (e.name = "close",list.classList.
    add('top-[80px]'), list.classList.add('opacity-100')) : 
    (e.name = "menu",list.classList.remove('top-[80px]'),
    list.classList.remove('opacity-100'))
  }
</script>
