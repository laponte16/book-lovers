<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/tailwindcss.css">

  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://kit.fontawesome.com/ca713a058f.js" crossorigin="anonymous"></script>
    <title>User Page</title>
</head>
<body>
  <%- include('./nav.ejs') %>
  <div class="container-body flex flex-col relative p-5 items-center z-10">
    <div class="text-center w-1/3 rounded-md border-y-4 borde-red py-5">
      <p class="texto-white text-4xl ">Profile</p>
    </div>

    <!--Info session-->
    <div class="flex flex-col w-full px-10 pt-4">
      <div class="flex flex-col md:flex-row w-full">
        <div class="flex flex-col w-4/5 md:w-1/3 texto-white mx-8 mt-8">
          <div class="fondo-black rounded p-5 w-fit">
            <div class="w-32 md:w-40 lg:w-56 border-4 borde-white rounded">
              <img src="/images/user_default.jpg">
            </div>
            <div class="pl-5 pt-2">
              <p class="texto-red">Username:</p><p class="text-xl"> <%= result.user.username == "" ? "none" : result.user.username %></p>
              <p class="texto-red">User since: </p><p class="text-xl pb-5"><%= result.user.join_date == "" ? "none" : result.user.join_date %> </p>
            </div>
          </div>
        </div>
        
        <div class="flex flex-col w-4/5 md:w-1/3 texto-white m-8">
          <div class="w-fit">
            <p class="text-3xl texto-red fondo-black rounded-t w-fit p-10">Posts: <%= result.posts.length %></p>
            <div class="fondo-black rounded-b rounded-r p-10 text-xl">
              <ul class="flex flex-col">
                <%for (var i = 0 ; i < result.posts.length; i++) { %>
                  <li class="inline-flex"><i class="fa-solid fa-book texto-red pt-3"></i><a class="w-fit pt-2 hover-red duration-1000" href="/post/<%=result.posts[i].id_posts%>/"><%= result.posts[i].title %></a></li>
                <% } %>
            </ul>
            </div>
          </div>

        </div>
      </div>
    </div>
    

  </div>
  <%- include('./footer.html') %>
</body>
</html>