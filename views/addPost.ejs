<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Post</title>

    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/tailwindcss.css">

    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://kit.fontawesome.com/ca713a058f.js" crossorigin="anonymous"></script>
</head>
<body>
    <%- include('./nav.ejs') %>
    <div class="flex flex-col justify-center align-middle text-center w-full items-center">
        <!--formulario de agregar posts-->
		<form action="/create_post" method="post" id="create_post">
            <div class="flex flex-col justify-center align-middle text-center w-96 items-center">
                <div>
                    <p class="texto-white">Add a New Review!</p>
                </div>
                <div class="flex flex-col">
                    <p class="texto-white">What's the title of the book?</p>
					<input type="text" name="title" id="title">
                </div>
                <div class="flex flex-row mt-3">
                    <p class="texto-white">What's the Genre of the book? &nbsp;</p>
                    <select name="id_genres" id="id_genres" form="create_post">
						<%for (var i = 0 ; i < result.genre.length; i++) { %>
							<option value="<%=result.genre[i].id_genres%>">
								<%=result.genre[i].name%>
							</option>
						<% } %>
					</select>
                </div>
                <div class="flex flex-col justify-center align-middle w-full  mt-3">
                    <p class="texto-white">Character Limit: 0/2000</p>
                    <textarea name="content_post" id="content_post" cols="30" rows="8" maxlength="2000"></textarea>
                </div>
                <div class="flex flex-col justify-center align-middle w-full  mt-3">
                    <p class="texto-white">Add a book cover image(link):</p>
                    <input type="text" name="image" id="image">
                </div>
                <div class="border-2 rounded-md mt-1 fondo-red texto-white">
                    <input type="submit" name="Enviar" value="Submit" tabindex="-1" class="cursor-pointer">
                </div>
            </div>
		</form>
	</div>

    <!--AGREGAR GENEROS-->
	<div class="agregar" id="agregar">
		<form  method="post" action="/newgen">
			<table border="1">
				<tr><th colspan="2">agregar generos</th></tr>
				<tr>
					<th>nombre del genero</th>
					<th><input type="text" name="gen_name" id="gen_name"></th>
				</tr>
				<tr>
					<th>selecciones una imagen</th>
					<th><input type="text" name="img_gen" id="img_gen"></th>
				</tr>
				<tr>
					<th><input type="submit" name="Enviar" value="subir"></th>
					<th><input type="reset" name="borrar" value="borrar"></td>
				</tr>
			</table>
		</form>
	</div>

    <%- include('./footer.html') %>
</body>
</html>